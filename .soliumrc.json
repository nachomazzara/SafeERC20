{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "security/no-block-members": "off",
    "uppercase": "off",
    "quotes": ["error", "double"],
    "max-len": ["warning", 100],
    "indentation": ["error", 4],
    "no-constant": ["error"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-inline-assembly": ["warning"],
    "function-order": "off"
  }
}
